{
  "name": "react-boilerplate",
  "version": "1.4.0",
  "description": "a small react-redux boilerplate app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jameslaneconkling/react-boiler.git"
  },
  "keywords": [
    "boilerplate",
    "es6",
    "react",
    "redux",
    "webpack"
  ],
  "scripts": {
    "lint": "tslint --config ./tslint.json --project ./tsconfig.json --format stylish",
    "build:tests": "tsc --project tsconfig-test.json",
    "test": "npm run build:tests && NODE_ENV=test node test_dist/test/ | tap-summary",
    "validate": "npm run test && npm run lint",
    "dev": "webpack-dev-server --mode development --config webpack.dev.js --progress",
    "build": "webpack --mode production --config webpack.prod.js",
    "deploy:patch": "npm run validate && npm run build && npm version patch && git push --follow-tags",
    "deploy:minor": "npm run validate && npm run build && npm version minor && git push --follow-tags",
    "deploy:major": "npm run validate && npm run build && npm version major && git push --follow-tags"
  },
  "author": "James Conkling <james.lane.conkling@gmail.com> jameslaneconkling.github.io",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@types/history": "^4.7.2",
    "@types/ramda": "^0.26.8",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.8",
    "@types/react-router-dom": "^4.3.2",
    "@types/recompose": "^0.30.6",
    "@types/tape": "^4.2.33",
    "@types/webpack-env": "^1.13.9",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.6.0",
    "csp-html-webpack-plugin": "^3.0.1",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "hoist-non-react-statics": "^3.3.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "tap-summary": "^4.0.0",
    "tape": "^4.10.1",
    "ts-loader": "^5.3.3",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "connected-react-router": "^6.4.0",
    "history": "^4.9.0",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "recompose": "^0.30.0",
    "redux": "^4.0.1",
    "redux-observable": "^1.1.0",
    "rxjs": "^6.4.0"
  },
  "main": "dist/index.html"
}
