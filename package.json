{
  "name": "react-boilerplate",
  "version": "1.3.0",
  "description": "a small react-redux boilerplate app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jameslaneconkling/react-boiler.git"
  },
  "keywords": [
    "boilerplate",
    "es6",
    "react",
    "redux",
    "webpack"
  ],
  "scripts": {
    "dev": "webpack-dev-server --mode development --config webpack.dev.js --hot --progress",
    "lint": "tslint --config ./tslint.json --project ./tsconfig.json --format stylish",
    "tsc": "tsc --project ./tsconfig.json",
    "test": "node test/",
    "build": "webpack --mode production --config webpack.prod.js --progress",
    "validate": "npm run test && npm run lint && npm run build"
  },
  "author": "James Conkling <james.lane.conkling@gmail.com> jameslaneconkling.github.io",
  "license": "ISC",
  "devDependencies": {
    "@types/history": "^4.7.0",
    "@types/ramda": "github:types/npm-ramda#dist",
    "@types/react": "^16.4.8",
    "@types/react-dom": "^16.0.7",
    "@types/react-redux": "^6.0.6",
    "@types/react-router-dom": "^4.3.0",
    "@types/recompose": "^0.26.4",
    "@types/webpack-env": "^1.13.6",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.26.0",
    "clean-webpack-plugin": "^0.1.19",
    "csp-html-webpack-plugin": "^2.3.0",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.3",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.21.0",
    "tape": "^4.9.1",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "webpack": "^4.16.5",
    "webpack-cli": "^2.1.5",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.4"
