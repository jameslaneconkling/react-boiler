{
  "extends": "airbnb",
  "parser": "typescript-eslint-parser",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "settings": {
    /* none of the below settings allow import/no-unresolved to successfully resolve ts/tsx files */
    "import/parsers": {
      "typescript-eslint-parser": [ ".ts", ".tsx" ]
    },
    "import/ignore": ["node_modules", "\\.(scss|css)$", "\\.ts$", "\\.tsx$"],
    "import/resolver": {
      "webpack": {
        "config": "./webpack.prod.js"
      }
    }
  },
  "rules": {
    "no-multi-spaces": 0,
    "function-paren-newline": 0,
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ],
    "arrow-parens": ["error", "always"],
    "no-confusing-arrow": [
      "error",
      {
        "allowParens": true
      }
    ],
    "max-len": [
      2,
      {
        "code": 100,
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "import/prefer-default-export": 0,
    "import/extensions": 0,
    "import/no-unresolved": 0,
    "no-console": 0,
    "react/prop-types": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".tsx", ".jsx"] }]
  }
}
